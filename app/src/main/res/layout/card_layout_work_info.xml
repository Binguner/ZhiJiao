<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_layout_work_info_constraintlayout"
    android:layout_width="match_parent"
    android:paddingStart="30dp"
    android:paddingTop="10dp"
    android:foreground="?attr/selectableItemBackground"
    android:layout_height="100dp">


    <android.support.constraint.Guideline
        android:id="@+id/card_layout_work_info_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginEnd="10dp"
        app:layout_constraintGuide_percent="0.9739583" />
    <TextView
        android:id="@+id/card_layout_work_info_type"
        android:text="机械工程学院"
        android:textSize="10dp"
        android:textColor="@color/colorGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:maxLines="2"
        android:id="@+id/card_layout_work_info_title"
        app:layout_constraintTop_toBottomOf="@id/card_layout_work_info_type"
        android:text=">  (校本部)关于党政办学院库房整理管理员补招 (第二学期) (本科生)"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:ellipsize="end"

        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/card_layout_work_info_time"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-05-02 18:00"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="@id/card_layout_work_info_bottomline"
        app:layout_constraintBottom_toBottomOf="@+id/card_layout_work_info_constraintlayout"/>
    <ImageView
        android:id="@+id/card_layout_work_info_boyicon"
        app:layout_constraintStart_toStartOf="@+id/card_layout_work_info_bottomline"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@mipmap/boy_blue_48"
         android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/card_layout_work_info_constraintlayout"/>
    <ImageView
        android:id="@+id/card_layout_work_info_girlicon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toEndOf="@+id/card_layout_work_info_boyicon"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/card_layout_work_info_constraintlayout"
        android:src="@mipmap/girl_blue_48"/>
    <TextView
        android:id="@+id/card_layout_work_info_peoplelimit"
        android:textColor="@color/colorGreen"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/card_layout_work_info_girlicon"
        app:layout_constraintBottom_toBottomOf="@id/card_layout_work_info_constraintlayout"
        android:text="10/133"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/card_layout_work_info_bottomline"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/card_layout_work_info_constraintlayout"
        android:layout_width="match_parent"
        android:background="@color/colorGrayAlittle"
        android:layout_height="2dp" />

</android.support.constraint.ConstraintLayout>
