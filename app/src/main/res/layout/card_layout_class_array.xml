<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:id="@+id/card_layout_clas_array_parent"

    android:foreground="?attr/selectableItemBackground"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/class_array_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"

        android:visibility="gone"

        android:textColor="@color/colorBlack"
        android:text="数据结构R"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/class_array_teacher"
        android:layout_marginTop="12dp"

        android:visibility="gone"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="杨永强"/>

    <android.support.constraint.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@+id/class_array_teacher"
        android:id="@+id/card_layout_class_array_constraintlayout1"
        android:layout_width="match_parent"

        android:visibility="gone"

        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/class_array_weekDay1"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/class_array_starAndEnd1"
            app:layout_constraintTop_toBottomOf="@+id/class_array_name"
            android:text="周三"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/class_array_starAndEnd1"
            android:text="1-10周上"
            android:layout_marginTop="5dp"

            app:layout_constraintStart_toEndOf="@+id/class_array_weekDay1"
            app:layout_constraintEnd_toStartOf="@+id/class_array_address1"
            app:layout_constraintTop_toBottomOf="@+id/class_array_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/class_array_address1"
            android:text="行远楼"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/class_array_name"
            app:layout_constraintStart_toEndOf="@+id/class_array_starAndEnd1"
            app:layout_constraintEnd_toStartOf="@+id/class_array_classRoom1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/class_array_classRoom1"
            android:layout_marginTop="5dp"
            android:text="B115"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/class_array_address1"
            app:layout_constraintTop_toBottomOf="@+id/class_array_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@+id/card_layout_class_array_constraintlayout1"
        android:id="@+id/card_layout_class_array_constraintlayout2"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/class_array_weekDay2"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/class_array_starAndEnd2"
            app:layout_constraintTop_toBottomOf="@+id/class_array_name"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/class_array_starAndEnd2"
            android:text=""
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@+id/class_array_weekDay2"
            app:layout_constraintEnd_toStartOf="@+id/class_array_address2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/class_array_address2"
            android:text=""
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@+id/class_array_starAndEnd2"
            app:layout_constraintEnd_toStartOf="@+id/class_array_classRoom2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/class_array_classRoom2"
            android:layout_marginTop="5dp"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/class_array_address2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@+id/card_layout_class_array_constraintlayout2"
        android:id="@+id/card_layout_class_array_constraintlayout3"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/class_array_weekDay3"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/class_array_starAndEnd3"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/class_array_starAndEnd3"
            android:text=""
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@+id/class_array_weekDay3"
            app:layout_constraintEnd_toStartOf="@+id/class_array_address3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/class_array_address3"
            android:text=""
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@+id/class_array_starAndEnd3"
            app:layout_constraintEnd_toStartOf="@+id/class_array_classRoom3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/class_array_classRoom3"
            android:layout_marginTop="5dp"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/class_array_address3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
