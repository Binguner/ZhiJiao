<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_layout_news_cardlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/card_layout_news_constraintlayout"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingStart="30dp"
        android:layout_height="70dp">
        <TextView
            android:id="@+id/card_layout_news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="校外访问综合教务系统vpn插件下载"/>

        <TextView
            app:layout_constraintBottom_toBottomOf="@+id/card_layout_news_constraintlayout"
            app:layout_constraintEnd_toEndOf="@+id/card_layout_news_constraintlayout"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-08-08"/>

        <ImageView
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/card_layout_news_constraintlayout"
            android:layout_width="match_parent"
            android:background="@color/colorGrayAlittle"
            android:layout_height="2dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
