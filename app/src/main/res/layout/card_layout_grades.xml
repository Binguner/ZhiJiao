<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/dp_10"
    android:id="@+id/card_layout_grade_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.Guideline
        android:id="@+id/grade_line_for_type"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@id/card_layout_grade_parent"
        app:layout_constraintGuide_percent="0.75"
        android:background="@color/colorBlue"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <android.support.constraint.Guideline
        android:id="@+id/grade_line_for_xf"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@id/card_layout_grade_parent"
        app:layout_constraintGuide_percent="0.58"
        android:background="@color/colorBlue"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <android.support.constraint.Guideline
        android:id="@+id/grade_line_for_grades"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@id/card_layout_grade_parent"
        app:layout_constraintGuide_percent="0.38"
        android:background="@color/colorBlue"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <android.support.constraint.Guideline
        android:id="@+id/grade_line_for_name"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@id/card_layout_grade_parent"
        app:layout_constraintGuide_percent="0.08"
        android:background="@color/colorBlue"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/card_layout_grade_name"
        app:layout_constraintStart_toEndOf="@+id/grade_line_for_name"
        android:maxLength="7"
        android:singleLine="false"
        android:layout_width="90dp"
        android:layout_height="wrap_content"

        android:text="大学物理"/>
    <TextView
        android:id="@+id/card_layout_grade_score"

        app:layout_constraintStart_toEndOf="@+id/grade_line_for_grades"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="100.0"/>
    <TextView
        android:id="@+id/card_layout_grade_credit"

        app:layout_constraintStart_toEndOf="@+id/grade_line_for_xf"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="2.5"/>
    <TextView
        android:id="@+id/card_layout_grade_property"

        app:layout_constraintStart_toEndOf="@+id/grade_line_for_type"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通识必修"/>

    <ImageView
        android:layout_marginTop="2dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@+id/card_layout_grade_property"

        android:layout_width="match_parent"
        android:background="@color/colorGrayAlittle"
        android:layout_height="2dp" />

</android.support.constraint.ConstraintLayout>
